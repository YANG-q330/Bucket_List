<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{% block title %}Bucket-List{% endblock %}</title>
        {# Les CSS #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css">
        {# Google font Poppins #}
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" >
        {# le favicon #}
        <link rel="icon" href="{{ asset('img/favicon.png') }}">
    </head>

    <body>
    <nav class="navbar is-success content" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <h1><a class="navbar-item" href="{{ path('main_home')}}">
                <img src="{{asset('img/logo.png')  }}" > Bucket-List </a>
            </h1>
            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>
        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item" href="{{ path('main_home')}}">
                    Home
                </a>
                <a class="navbar-item" href="{{ path('main_about_us')}}">
                    About us
                </a>
                <a class="navbar-item" href="{{ path('wish_list')}}">
                    Wish list
                </a>
                <a class="navbar-item" href="{{ path('wish_new')}}">
                    Add a wish
                </a>

            </div>
        </div>
        <div>
            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="icon-account">
                        <a>
                        <strong>Log In</strong>
                        <img class="" width="50" height="50" src="https://static-cdn.drawnames.com/Content/Assets/icon-account-inactive.svg?nc=201911111111" alt="Mon compte">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div class="container content">
        {% block body %}{% endblock %}
    </div>
    <div class="container content">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} message-header">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    </body>

    <footer class="footer">
        <div class=" content has-text-centered">
            &copy;Bucket-List  {{ "now"|date("Y") }}
        </div>
    </footer>
</html>
